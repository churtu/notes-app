<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit Note</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit-note/{{note._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" class="form-control" name="title" value="{{note.title}}" placeholder="Title">
                </div>
                <div class="form-group">
                    <textarea name="description" placeholder="Description" class="form-control">{{note.description}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary btn-block"> Save</button>
            </form>
        </div>
    </div>
</div>